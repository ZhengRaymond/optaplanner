<?xml version="1.0" encoding="UTF-8"?>
<solver>
	<!-- Define the model -->
	<solutionClass>com.homerlogistics.optaplanner.nqueens.domain.NQueensSolution</solutionClass>
	<entityClass>com.homerlogistics.optaplanner.nqueens.domain.Queen</entityClass>

	<!-- Define the score function -->
	<scoreDirectorFactory>
		<easyScoreCalculatorClass>com.homerlogistics.optaplanner.nqueens.score.NQueensScore</easyScoreCalculatorClass>
	</scoreDirectorFactory>

	<!-- Configure the optimization algorithms (optional) -->
  <termination>
    <secondsSpentLimit>5</secondsSpentLimit>
  </termination>
</solver>
